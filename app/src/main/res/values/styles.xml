<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BottomNavigationTheme" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/muli_bold</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="elementInList">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="text">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:lineSpacingExtra">@dimen/size8</item>
        <item name="android:textColor">@color/colorTextGray</item>
        <item name="android:fontFamily">@font/muli</item>
    </style>

    <style name="blueButton" >
        <item name="android:fontFamily">@font/muli</item>
        <item name="android:lineSpacingExtra">@dimen/size6</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/background_button_blue</item>
        <item name="android:layout_height">@dimen/size60</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="InputTil" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/colorTextBlack</item>
        <item name="android:layout_marginTop">@dimen/size8</item>
        <item name="android:fontFamily">@font/muli_bold</item>
        <item name="android:colorControlNormal">@color/colorPrimary</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="InputEditText" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textColorHint">@color/colorTextGray</item>
        <item name="android:padding">@dimen/size16</item>
        <item name="android:paddingStart">@dimen/size8</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/muli_bold</item>
        <item name="android:colorControlNormal">@color/colorPrimary</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout"  parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="SpinnerTheme">
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:fontFamily">@font/muli_bold</item>
    </style>

    <style name="blueTitle" parent="text">
        <item name="android:letterSpacing">0</item>
        <item name="android:lineSpacingExtra">@dimen/size6</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_extra_large</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
